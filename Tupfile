LIBS = libinput libudev libdrm libsystemd xkbcommon
CFLAGS = -std=c99 -Wall -Wextra -Wno-unused-parameter -ggdb -pthread -D_GNU_SOURCE \$(pkg-config --cflags $(LIBS))
LDFLAGS = \$(pkg-config --libs $(LIBS))
: foreach rfb.c util.c d3des.c logind.c log.c input.c input_state.c drm.c event_loop.c session.c fb_mngr.c main.c |> gcc $(CFLAGS) -c %f -o %o |> build/%B.o
: build/*.o |> gcc %f -o %o $(LDFLAGS) |> build/vnc-client
.gitignore
